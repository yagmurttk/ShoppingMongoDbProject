@model ProductDetailViewModel

@{
    Layout = null;
}

<div class="wrap-modal1 js-modal1 p-t-60 p-b-20">
    <div class="overlay-modal1 js-hide-modal1"></div>

    <div class="container">
        <div class="bg0 p-t-60 p-b-30 p-lr-15-lg how-pos3-parent">
            <div class="row">
                <!-- Ürün Görselleri -->
                <div class="col-md-6 col-lg-7 p-b-30">
                    <div class="p-l-25 p-r-30 p-lr-0-lg">
                        <div class="wrap-slick3 flex-sb flex-w">
                            <div class="wrap-slick3-dots"></div>
                            <div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

                            <div class="slick3 gallery-lb">
                                @foreach (var img in Model.Images)
                                {
                                    <div class="item-slick3" data-thumb="@img.ImageUrl1">
                                        <div class="wrap-pic-w pos-relative">
                                            <img src="@img.ImageUrl1" alt="Ürün Görseli 1">
                                            <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="@img.ImageUrl1">
                                                <i class="fa fa-expand"></i>
                                            </a>
                                        </div>
                                    </div>

                                    <div class="item-slick3" data-thumb="@img.ImageUrl2">
                                        <div class="wrap-pic-w pos-relative">
                                            <img src="@img.ImageUrl2" alt="Ürün Görseli 2">
                                            <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="@img.ImageUrl2">
                                                <i class="fa fa-expand"></i>
                                            </a>
                                        </div>
                                    </div>

                                    <div class="item-slick3" data-thumb="@img.ImageUrl3">
                                        <div class="wrap-pic-w pos-relative">
                                            <img src="@img.ImageUrl3" alt="Ürün Görseli 3">
                                            <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="@img.ImageUrl3">
                                                <i class="fa fa-expand"></i>
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Ürün Bilgileri -->
                <div class="col-md-6 col-lg-5 p-b-30">
                    <div class="p-r-50 p-t-5 p-lr-0-lg">
                        <h4 class="mtext-105 cl2 js-name-detail p-b-14">
                            @Model.Product.ProductName
                        </h4>

                        <span class="mtext-106 cl2">
                            ₺@Model.Product.ProductPrice
                        </span>

                        <p class="stext-102 cl3 p-t-23">
                            Bu ürün yüksek kalite standartlarında üretilmiştir. Detaylı açıklama, ürünle ilgili bilgilendirme metni burada yer alabilir.
                            Kullanım alanları, materyal özellikleri ve diğer detaylar buraya eklenebilir.
                        </p>

                        <div class="p-t-33">
                            <!-- Beden Seçimi -->
                            <div class="flex-w flex-r-m p-b-10">
                                <div class="size-203 flex-c-m respon6">
                                    Beden
                                </div>
                                <div class="size-204 respon6-next">
                                    <div class="rs1-select2 bor8 bg0">
                                        <select class="js-select2" name="size">
                                            <option>Bir seçenek seçin</option>
                                            <option>Beden S</option>
                                            <option>Beden M</option>
                                            <option>Beden L</option>
                                            <option>Beden XL</option>
                                        </select>
                                        <div class="dropDownSelect2"></div>
                                    </div>
                                </div>
                            </div>

                            <!-- Renk Seçimi -->
                            <div class="flex-w flex-r-m p-b-10">
                                <div class="size-203 flex-c-m respon6">
                                    Renk
                                </div>
                                <div class="size-204 respon6-next">
                                    <div class="rs1-select2 bor8 bg0">
                                        <select class="js-select2" name="color">
                                            <option>Bir seçenek seçin</option>
                                            <option>Kırmızı</option>
                                            <option>Mavi</option>
                                            <option>Beyaz</option>
                                            <option>Gri</option>
                                        </select>
                                        <div class="dropDownSelect2"></div>
                                    </div>
                                </div>
                            </div>

                            <!-- Sepete Ekle -->
                            <div class="flex-w flex-r-m p-b-10">
                                <div class="size-204 flex-w flex-m respon6-next">
                                    <div class="wrap-num-product flex-w m-r-20 m-tb-10">
                                        <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                                            <i class="fs-16 zmdi zmdi-minus"></i>
                                        </div>

                                        <input class="mtext-104 cl3 txt-center num-product" type="number" name="num-product" value="1" />

                                        <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                                            <i class="fs-16 zmdi zmdi-plus"></i>
                                        </div>
                                    </div>

                                    <button class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail">
                                        Sepete Ekle
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Sosyal Medya ve Favoriler -->
                        <div class="flex-w flex-m p-l-100 p-t-40 respon7">
                            <div class="flex-m bor9 p-r-10 m-r-11">
                                <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 js-addwish-detail tooltip100" data-tooltip="Favorilere Ekle">
                                    <i class="zmdi zmdi-favorite"></i>
                                </a>
                            </div>

                            <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Facebook">
                                <i class="fa fa-facebook"></i>
                            </a>

                            <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Twitter">
                                <i class="fa fa-twitter"></i>
                            </a>

                            <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Google Plus">
                                <i class="fa fa-google-plus"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .wrap-modal1 {
        padding-top: 60px;
        padding-bottom: 20px;
    }

        .wrap-modal1 .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .wrap-modal1 .row {
            display: flex;
            gap: 20px;
        }

        .wrap-modal1 .col-md-6.col-lg-7 {
            flex: 0 0 55%;
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .wrap-modal1 .slick3.gallery-lb {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .wrap-modal1 .item-slick3 {
            width: calc(33.333% - 10px);
            cursor: pointer;
        }

            .wrap-modal1 .item-slick3 img {
                width: 100%;
                height: auto;
                object-fit: cover;
                border-radius: 6px;
            }

        .wrap-modal1 .col-md-6.col-lg-5 {
            flex: 0 0 40%;
        }

    @@media (max-width: 992px) {
        .wrap-modal1 .row {
            flex-direction: column;
        }

        .wrap-modal1 .col-md-6.col-lg-7,
        .wrap-modal1 .col-md-6.col-lg-5 {
            flex: 0 0 100%;
            max-width: 100%;
        }

        .wrap-modal1 .item-slick3 {
            width: 48%;
        }
    }

    @@media (max-width: 576px) {
        .wrap-modal1 .item-slick3 {
            width: 100%;
        }
    }
</style>
