@model ShoppingMongo.Dtos.CategoryDtos.GetCategoryByIdDto

@{
    ViewData["Title"] = "Kategori Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kategoriyi Düzenle</h1>
<div class="container">
    <br /><br />
    <form method="post">
        <input type="hidden" asp-for="CategoryId" />

        <label>Kategori Adı</label>
        <div class="mb-3">
            <input type="text" class="form-control" placeholder="Kategori Adı" asp-for="CategoryName" />
        </div>
        <br />

        <label>Görsel Bağlantısı (URL)</label>
        <div class="mb-3">
            <input type="text" class="form-control" placeholder="Görsel URL" asp-for="ImageUrl" />
        </div>
        <br />

        <button class="btn btn-outline-primary form-control">Kaydet</button>
    </form>
</div>
